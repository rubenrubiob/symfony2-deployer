hosts:
    server_name:
        hosts:
            - 'username@host:port'
        path: '/path/to/source'
        composer_bin: '/path/to/composer'
        php_bin: '/path/to/php'
        phpunit_bin: '/path/to/local/phpunit'
        branch: 'master'
        tests: false
        repo: 'git@repo.org'
        database_migrations: false
        forward_agent: true
        assets:
            enabled: false
            symlink: true
            relative: false
            target_path: '/path/to/target/path'
        file_backups:
            enabled: false
            destination_path: '/path/to/target/path'
            files:
                - '/path/to/target/path'
                - '/path/to/target/path'
            number_of_backups: 10